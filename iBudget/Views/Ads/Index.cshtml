@model IEnumerable<iBudget.Models.Ad>

@{
    ViewData["Title"] = "Index";
}

<h2>Index</h2>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.AdPost)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Carousel)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PaymentCollected)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ApplicationUser)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.AdPost)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Carousel)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.PaymentCollected)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ApplicationUser.Id)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.AdID">Edit</a> |
                    <a asp-action="Details" asp-route-id="@item.AdID">Details</a> |
                    <a asp-action="Delete" asp-route-id="@item.AdID">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
